{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DbConnection": "Server=localhost; Port=5432; Database=transport-manager; Username=postgres; Password=123qwe"
  },
  "JwtConfig": {
    "Secret": "f,dult;pbqrkvyjghcnea[wxio]sm'.z"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Fatal",
        "Microsoft.Hosting.Lifetime": "Fatal"
      }
    }
  },
  "WriteTo": [
    {
      "Name": "Logger",
      "Args": {
        "configureLogger": {
          "Filter": [
            {
              "Name": "ByIncludingOnly",
              "Args": {
                "expression": "@l in ['Information', 'Debug']"
              }
            }
          ],
          "WriteTo": [
            {
              "Name": "File",
              "Args": {
                "path": "./logs/trace_.txt",
                "rollingInterval": "Day",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    },
    {
      "Name": "Logger",
      "Args": {
        "configureLogger": {
          "Filter": [
            {
              "Name": "ByIncludingOnly",
              "Args": {
                "expression": "@l in ['Error', 'Fatal', 'Warning']"
              }
            }
          ],
          "WriteTo": [
            {
              "Name": "File",
              "Args": {
                "path": "./logs/errors_.txt",
                "rollingInterval": "Day",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    }
  ],
  "Properties": {
    "Application": "TransportManager"
  }
}
